%div(ui-layout="{flow : 'row'}")
  %div(ui-layout-container size="70%")
    .row
      .col-xs-12
        %nav.navbar.navbar-default
          .container-fluid
            .navbar-header
              %p.navbar-text Customer:
              %h4.navbar-text {{ order.customer.first_name }} {{ order.customer.last_name }}
              %p.navbar-text Order:
              %h4.navbar-text {{ order.id }}
              %p.navbar-text Status:
              %h4.navbar-text NEW
            .navbar-right
              %p discount: {{ order.discount }}
              %p tax: {{ order.tax }}
              %p profit: {{ order.profit }}
            %h3.navbar-text.navbar-right Total: {{ order.item_total | currency }}
            %label.navbar-text.navbar-right 
              Search: 
              %input{ng_model: "searchText"}
    .row
      .col-xs-2
        .alert.alert-info
          %img.img-rounded{ src: "/assets/gem.jpg", style: "max-width:100%; max-height:100%" }
    
      .col-xs-10
        %table.product-table.table.table-striped{ fixed_header:"" }
          %thead
            %tr
              %th Item
              %th price
              %th description
          %tbody
            %tr{ ng_repeat: "product in products | filter:searchText" }
              %td {{ product.name }}
              %td {{ product.price }}
              %td {{ product.description }}
              %td {{ product.profit }}
          
  %div(ui-layout-container size="30%")
    %div
      .row
        .col-xs-12
          %table.line-item-table.table.table-striped{ fixed_header:"" }
            %thead
              %tr
                %th item
                %th price
                %th quantity
                %th value
            %tbody
              %tr{ ng_repeat: "line_item in line_items" }
                %td {{ line_item.product.name }}
                %td {{ line_item.price }}
                %td {{ line_item.quantity }}
                %td {{ line_item.value }}







