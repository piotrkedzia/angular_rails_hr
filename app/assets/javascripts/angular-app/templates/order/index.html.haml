
.col-xs-10.col
  %h1 All orders
  
  %table.table
    %thead
      %th order number
      %th customer
      %th description
      %th status
      %th confirmed date
      %th order total
    %tbody
      %tr{ ng_repeat: "order in orders" }
        %td
          %a{ ng_href: "#/orders/{{ order.id }}" }
            {{ order.id }}
        %td {{ order.customer.first_name }} {{ order.customer.last_name }}
        %td {{ order.description }}
        %td {{ order.status }}
        %td {{ order.confirmed_date  }}
        %td {{ order.item_total |currency }}
        %td
          %a(class="btn btn-success" ng-href="#/orders/{{ order.id }}") Edit
  